<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="info.sajib.moviesapp.activity.CastDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cast_details_imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/cast_details_imageview"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:contentDescription="@string/cast_picture"
            android:scaleType="fitXY"
            android:transitionName="castimage"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cast_details_actorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/cast_details_imageview1"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_details_imageview1"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/overview"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/cast_details_actordetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overview"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#113a66"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cast_details_personfact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/cast_details_imageview1"
        android:text="@string/person_fact"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/cast_details_Birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_details_personfact"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/cast_details_imageview1"
        android:text="BirthDay:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/cast_details_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_details_Birthdate"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/cast_details_imageview1"
        android:textColor="#113a66" />

    <TextView
        android:id="@+id/cast_details_Place_Of_Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_details_birthday"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/cast_details_imageview1"
        android:text="@string/place_of_birth"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/cast_details_placeofbirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_details_Place_Of_Birth"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/cast_details_imageview1"
        android:textColor="#686767" />
</RelativeLayout>
