<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/text_tv"
        android:layout_width="wrap_content"
        android:text="@string/tv_shows_airing_this_week"
        android:gravity="start|center_vertical"
        android:textColor="#113a66"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="@string/tvshows"
        android:id="@+id/tvshows"
        android:background="@drawable/rectangle"
        android:gravity="start|center_vertical"
        android:layout_margin="4dp"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <info.sajib.moviesapp.custom.AutoScrollViewPager2
        android:id="@+id/tv_viewpager"
        android:layout_below="@+id/tvshows"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="170dp">

    </info.sajib.moviesapp.custom.AutoScrollViewPager2>
